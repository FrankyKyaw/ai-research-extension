{
    "manifest_version": 3,
    "name": "AI Text Summarizer",
    "version": "1.0",
    "description": "Summarize selected text using Chrome's built-in AI APIs.",
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "action": {
    "default_popup": "popup.html"
  },
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": ["<all_urls>"]
        }
    ],
    "permissions": ["contextMenus", "activeTab", "storage", "scripting"]
}